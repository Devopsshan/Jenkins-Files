pipeline { 
    agent any 
    stages { 
        stage("Checkout /Clone from Git & Maven Build") { 
            steps { 
                      git branch: "Main" ,   url : "https://github.com/devopsusergit/PetStoreWebApp.git"
                      sh  'mvn clean'
                      sh  ' mvn package'
            } 
        } 
}
}
stage('Clean & Pacakage') {
            steps {
                echo 'clean & Package the application.'
                      sh  'mvn clean'
                      sh  ' mvn package'
            }
        }
    
stages {
        stage('Regression Testing ') {
            steps {
                echo 'Regression Testing '
               
            }
        }
        stage('Acceptance') {
            steps {
                echo 'Running Acceptance Tests'
                
            }
        }
        stage('Post-Acceptance Tasks') {
            parallel {
                stage('Performance') {
                    steps {
                        echo 'Running Performance Testing'
                        
                    }
                }
                stage('Code Quality Check Test ') {
                    steps {
                        echo 'Running Code Quality Checks Test'
                        
                    }
                }
            }
        }
    }
